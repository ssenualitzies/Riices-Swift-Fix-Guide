  <footer>
    &copy; 2025 Swift Executors. Maintained by ssenualitzies.
  </footer>

  <script>
    fetch('https://raw.githubusercontent.com/ssenualitzies/ssenualitzies-swift-fix-guide/main/status.json')
      .then(res => res.json())
      .then(data => {
        // Status Box
        const statusBox = document.getElementById("status");
        const statusType = data.statusType || "Info";
        if (statusType === "Critical") statusBox.classList.add("status-critical");
        else if (statusType === "Warning") statusBox.classList.add("status-warning");
        else statusBox.classList.add("status-ok");

        statusBox.innerText = `Status: ${data.status.toUpperCase()}`;

        // Dropdown
        const dropdown = document.getElementById("reasonDropdown");
        dropdown.innerHTML = ""; // Clear default
        const option = document.createElement("option");
        option.innerText = data.reason;
        option.selected = true;
        dropdown.appendChild(option);
        dropdown.disabled = false;

        // Issues
        const issues = document.getElementById("issues");
        data.issues.forEach(issue => {
          const li = document.createElement("li");
          li.innerText = issue;
          issues.appendChild(li);
        });

        // Causes
        const causes = document.getElementById("causes");
        data.knownCauses.forEach(cause => {
          const li = document.createElement("li");
          li.innerText = cause;
          causes.appendChild(li);
        });

        // Notes + Time
        document.getElementById("notes").innerText = data.notes || "No additional notes.";
        document.getElementById("lastUpdate").innerText = new Date(data.lastUpdate).toLocaleString();
      })
      .catch(err => {
        document.getElementById("status").innerText = "‚ö†Ô∏è Error loading status data.";
        console.error("Failed to load JSON:", err);
      });
  </script>
